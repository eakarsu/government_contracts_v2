{
  "name": "contract-indexer-fullstack",
  "version": "1.0.0",
  "description": "Government contract indexing and document processing application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --ignore node_modules --ignore uploads --ignore logs --ignore documents --ignore .git server.js",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "client": "cd client && PORT=3001 npm start",
    "dev-full": "concurrently \"npm run dev\"  \"npm run client\"",
    "start-full": "concurrently \"npm start\" \"npm run client\""
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@xenova/transformers": "^2.17.2",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "pdf2pic": "^3.2.0",
    "pdf2table": "^0.0.2",
    "sharp": "^0.34.2",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "vectra": "^0.4.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
