{
  "name": "contract-indexer-fullstack",
  "version": "1.0.0",
  "description": "Government contract indexing and document processing application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --ignore node_modules --ignore uploads --ignore logs --ignore documents --ignore .git server.js",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "init-db": "chmod +x init-db.sh && ./init-db.sh",
    "client": "cd client && PORT=3001 npm start",
    "dev-full": "concurrently \"npm run dev\"  \"npm run client\"",
    "start-full": "concurrently \"npm start\" \"npm run client\""
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@tanstack/react-query": "^5.83.0",
    "@xenova/transformers": "^2.17.2",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "chromadb": "^1.10.5",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.9.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "pdf2table": "^0.0.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "react-scripts": "^5.0.1",
    "sharp": "^0.34.2",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0",
    "vectra": "^0.4.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.13",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "binaryTargets": [
      "native",
      "linux-musl-arm64-openssl-3.0.x"
    ]
  }
}
